@{
    ViewData["Title"] = "Index";
}

<div>
    <h3>Palabra Mostrada: @Juego.palabraMostrada</h3>
    <h4>Intentos Restantes: @Juego.intentosRestantes</h4>
</div>

@if (Juego.finalizo)
{
    <div>
        @if (Juego.gano)
        {
            <h4>¡Felicidades, has ganado!</h4>
        }
        else
        {
            <h4>Perdiste. La palabra secreta era: @Juego.palabraSecreta</h4>
        }
    </div>
}
else
{
    <form asp-action="AdivinarLetra" method="post">
        <label for="letra">Adivina una letra:</label>
        <input type="text" id="letra" name="letra" maxlength="1" required />
        <button type="submit">Adivinar</button>
    </form>
}

<br />
<a href="@Url.Action("Index", "Home")">Reiniciar juego</a>
